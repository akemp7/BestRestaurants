@using Best.Models;
@model List<Best.Models.Cuisine>;

<h1> Cuisine </h1>

@if (@Model.Count == 0)
{
    <h3> No types have been added yet! </h3>
}

<ul> 
    @foreach(Cuisine cuisine in Model)
    {
        <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id= cuisine.CuisineId }) </li>
    }
</ul>

<p>@Html.ActionLink("Add new type", "Create")</p>
<p>@Html.ActionLink("Back to main page", "Index", "Home") </p>