@{
  Layout = "_Layout";
}

@using Best.Models;
@model List<Best.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId })</li>
}

<button class="btn btn-default">@Html.ActionLink("Add new Restaurant", "Create")</button>
<button class="btn btn-default">@Html.ActionLink("Home", "Index", "Home")</button>